pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "minionz/backend:latest"
    }
    stages {
        stage('Git Clone') {
            steps {
                git branch: 'backend', url: 'https://github.com/beyond-sw-camp/be06-4th-MINIONZ.git'
            }
        }
        stage('Build') {
            steps {
                echo "Add Permission"
                sh 'chmod +x /var/lib/jenkins/workspace/backend/backend/gradlew'
                echo "Gradle Build"
                sh 'cd /var/lib/jenkins/workspace/backend/backend'
                sh 'gradlew bootJar'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    echo "Docker Build"
                    sh "docker build --tag minionz/backend:0.${BUILD_ID} ."

                    echo "Docker Login"
                    sh "echo 'asdf1234~!' | docker login -u minionz --password-stdin"

                    echo "Docker Push"
                    sh "docker push minionz/backend:0.${BUILD_ID}"
                }
            }
        }
        stage('SSH Transfer and Kubernetes Deployment') {
            steps {
                script {
                    sshPublisher(
                        continueOnError: false,
                        failOnError: true,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'jenkins',
                                verbose: true,
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'k8s-backend.yml',
                                        remoteDirectory: '/root/',
                                        execCommand: "sed -i 's/latest/0.${BUILD_ID}/g' /root/k8s-backend.yml"
                                    ),
                                    sshTransfer(
                                        execCommand: 'kubectl apply -f /root/k8s-backend.yml'
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        }
    }
}