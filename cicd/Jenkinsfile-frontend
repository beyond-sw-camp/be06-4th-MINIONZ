pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "minionz/frontend:latest"
        IS_FRONTEND_CHANGED = 'false'
    }
    stages {
        stage('Check for Backend Changes') {
            steps {
                script {
                    def changedFiles = sh(script: "git diff --name-only HEAD^ HEAD", returnStdout: true).trim().split('\n')
                    echo "이거 뭐야? : ${changedFiles}"
                    IS_FRONTEND_CHANGED = changedFiles.any { it.startsWith("frontend/") }.toString()
                    echo "Frontend changes: ${IS_FRONTEND_CHANGED}"
                }
            }
        }

        stage('Build') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                echo "Add Permission"
                sh 'chmod +x /var/lib/jenkins/workspace/frontend/frontend'

                echo "Npm Build"
                sh'''
                cd /var/lib/jenkins/workspace/frontend/frontend
                npm install
                npm run build
                '''
            }
        }

        stage('Docker Build & Push') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                script {
                    withCredentials([
                        usernamePassword(credentialsId: 'minionztest', usernameVariable: 'DOCKERID', passwordVariable: 'DOCKERPW')
                    ]) {
                        echo "Docker Build"
                        sh "docker build --tag minionz/frontend:0.${BUILD_ID} ./frontend"

                        echo "Docker Login"
                        sh "docker login -u $DOCKERID -p $DOCKERPW"

                        echo "Docker Push"
                        sh "docker push minionz/frontend:0.${BUILD_ID}"
                    }
                }
            }
        }

        stage('SSH Transfer and Kubernetes Deployment') {
            when {
                expression { IS_FRONTEND_CHANGED == 'true' }
            }

            steps {
                script {
                    sshPublisher(
                        continueOnError: false,
                        failOnError: true,
                        publishers: [
                            sshPublisherDesc(
                                configName: 'jenkins',
                                verbose: true,
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'cicd/k8s-frontend.yml',
                                        remoteDirectory: '/minionz/',
                                        execCommand: "sed -i 's/latest/0.${BUILD_ID}/g' /home/master/minionz/cicd/k8s-frontend.yml"
                                    ),
                                    sshTransfer(
                                        execCommand: 'kubectl apply -f /home/master/minionz/cicd/k8s-frontend.yml'
                                    )
                                ]
                            )
                        ]
                    )
                }
            }
        }
    }
}

